<link rel="stylesheet" href="./css/home.css">
<section id="feed-posts">
  

    <% if(locals.user){ %>

        <h4>Post: </h4>

        <form action="/post/create" id="new-post-form" method="post">
            <textarea name="content"  cols="30" rows="3"></textarea>

            <input type="submit">
        </form>

    <% } %>


    <div id="posts-list-container">
        <ul>

            <% for (post of all_posts) { %>

                <%- include('_post.ejs') %>
                    
            <% } %>

        </ul>
            </div>

        </section>

        <section id="user-friends">
            <h4>Freinds</h4>
            <% for(u of all_users){  %>
                <p>
                    <a href="/user/profile/<%=u.id%>">
                        <%= u.userName %>
                    </a>
                </p>
            <% } %>
            
        </section>
    </div>
</section>

<script src="./js/homePost.js"></script> 
